{
	"settings":{
		"userAgent" : "native-mobile-yoox/2.0 v.4.2.1(build 3370) iPhone4,1 iPhone OS 7.1.2",
		"Environment" : "LCL",
		"siteCode" : "YOOX_IT"
	},
	"operations" : [
		{
			"name": "keepAlive_1",
			"operation": "keepAlive"
		},
		{
			"name": "DoLogin",
			"operation": "login",
			"paramSources": {
				"email" : "franco.melandri@yoox.com",
				"password" : "password"
			}
		},
		{
			"name": "Search_1",
			"operation": "searchresults",
			"paramSources": {
				"gender" :  "D",
				"dept" :  "women"
			}
		},
		{
			"name": "Item_1",
			"operation": "items",
			"paramSources": {
				"code10" :  "{Search_1.Items[0].Cod10}"
			},			
			"assertions":[
				{
					"field": "{Item_1.Cod10}",
					"comparison": "neq",
					"value": ""
				}			
			]
		},
		{
			"name": "AddToDreamBox",
			"operation": "addtodreambox",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"accesstoken" : "{DoLogin.User.AccessToken}",
				"code10" : "{Item_1.Cod10}",
				"size" : "{Item_1.Sizes[0].Id}"
			},
			"assertions":[
				{
					"field": "{AddToDreamBox.Items(Cod10={Item_1.Cod10}).Cod10}",
					"comparison": "eq",
					"value": "{Item_1.Cod10}"
				}			
			]
		},
		{
			"name": "UpdateDreamBox",
			"operation": "updatedreambox",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"accesstoken" : "{DoLogin.User.AccessToken}",
				"code10" : "{Item_1.Cod10}",
				"size" : "{Item_1.Sizes[0].Id}",
				"hasalert" : "false"
			}
		},
		{
			"name": "DeleteDreamBox",
			"operation": "deletedreambox",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"accesstoken" : "{DoLogin.User.AccessToken}",
				"code10" : "{Item_1.Cod10}",
				"size" : "{Item_1.Sizes[0].Id}"
			},
			"assertions":[
				{
					"field": "{AddToDreamBox.NumberOfItems}",
					"comparison": "neq",
					"value": "{DeleteDreamBox.NumberOfItems}"
				}			
			]
		}		
	]
}