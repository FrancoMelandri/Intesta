{
	"settings":{
		"Environment" : "LCL",
		"siteCode" : "YOOX_IT"
	},
	"operations" : [
		{
			"name": "IsAlive",
			"operation": "keepAlive"
		},
		{
			"name": "DoLogin",
			"operation": "login",
			"paramSources": {
				"email": "test.it@yoox.com",
				"password": "password"
			}
		},
		{
			"name": "GetAccount",
			"operation": "getAccount",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"accessToken" : "{DoLogin.User.AccessToken}"
			}
		},
		{
			"name": "UpdateAccount",
			"operation": "updateAccount",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"password": "password",
				"accessToken" : "{DoLogin.User.AccessToken}",
				"name" : "pluto",
				"surname" : "{DoLogin.User.surname}",
				"birthday" : "{DoLogin.User.BirthDay}",
				"email" : "{DoLogin.User.email}",
				"gender" : "{DoLogin.User.gender}",
				"furigananame" : "{DoLogin.User.NameFur}",
				"furiganasurname" : "{DoLogin.User.SurnameFur}",
				"yooxletter" : "{DoLogin.User.YooxLetter}",
				"dataprofiling" : "{DoLogin.User.DataProfiling}"
			}
		},
		{
			"name": "GetAccountCheck",
			"operation": "getAccount",
			"paramSources": {
				"userid" : "{DoLogin.User.idUser}",
				"accessToken" : "{DoLogin.User.AccessToken}"
			},
			"assertions":[
				{
					"field": "{GetAccountCheck.User.name}",
					"comparison": "eq",
					"value": "pluto"
				}			
			]
		}
	]
}